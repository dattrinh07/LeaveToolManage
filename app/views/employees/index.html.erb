<p id="notice"><%= notice %></p>

<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">Listing Employee</h1>
	</div>
	<!-- /.col-lg-12 -->
</div>

<div class="row">
	<div class="col-lg-12">
		<div class="panel panel-default">
			<div class="dataTable_wrapper">
				<table class="table table-striped table-bordered table-hover">
					<thead>
						<tr>
							<th>Email</th>
							<th>Full Name</th>

							<th colspan="2"></th>
						</tr>
					</thead>

					<tbody>
						<% @employees.each do |employee| %>
						<tr>
							<td><%= employee.email %></td>
							<td><%= employee.full_name %></td>	
							<td><%= link_to 'Show', employee_path(employee) %></td>
							<td><%= link_to 'Edit', edit_employee_path(employee) %></td>
							<td><%= link_to 'Delete', employee_path(employee),method: :destroy,
								data: {confirm: 'Are u sure????'}
								%></td>
							</tr>
							<% end %>
						</tbody>
					</table>
				</div>
				<!-- /.panel-body -->
			</div>
			<!-- /.panel -->
		</div>
		<!-- /.col-lg-12 -->
	</div>