<div class="panel-body">
  <div class="row">
    <div class="col-lg-6">

      <p id="notice"><%= notice %></p>

      <div class="row">
        <div class="col-lg-12">
          <h1 class="page-header">Show Employee</h1>
        </div>
        <!-- /.col-lg-12 -->
      </div>
      <%= form_for @employee, as: :employee, url: employees_path do |f| %>
      <fieldset disabled>

        <div class="form-group">
          <%= f.label :email %><br>
          <%= f.text_field :email,  class: "form-control" %>
        </div>

        <div class="form-group">
         <%= f.label :full_name %><br>
         <%= f.text_field :full_name, class: "form-control", placeholder: "Full Name" %>
       </div>

       <div class="form-group">
        <%= f.label :address %><br>
        <%= f.text_area :address, class: "form-control", placeholder: "Address" %>
      </div>


      <div class="form-group">
       <%= f.label :Phone %><br>
       <%= f.number_field :phone, class: "form-control", placeholder: "Phone" %>
     </div>


     <div class="form-group">
       <%= f.label :skype %><br>
       <%= f.text_field :skype, class: "form-control", placeholder: "Skype" %>
     </div>


   </fieldset>
   <% end %>
   <p><%= link_to 'Back', employees_path, class:"btn btn-danger"%></p>
 </div>
</div>
</div>