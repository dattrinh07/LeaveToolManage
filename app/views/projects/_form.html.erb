<div class="panel-body">
	<div class="row">
		<div class="col-lg-6">

			<%= form_for(@project, remote: true) do |f| %>

			<% if @project.errors.any? %>
			<div id="error_explanation">
				<h2><%= pluralize(@project.errors.count, "error") %> prohibited this holiday from being saved:</h2>

				<ul>
					<% @project.errors.full_messages.each do |message| %>
					<li><%= message %></li>
					<% end %>
				</ul>
			</div>
			<% end %>

			<div class="form-group">
				<label>Title:</label><br>
				<%= f.text_field :title , class: "form-control"%>
			</div>

			<div class="form-group">
				<label>Description:</label><br>
				<%= f.text_area :description , class: "form-control"%>
			</div>

			<div class="form-group">
				<label>Project Manager:</label><br>
				<%= select_tag :project_manage_id, options_for_select(User.all.map{ |s| [s.full_name, s.id] }), class: "form-control" %>
			</div>

			<button type="button" id="btnCloseForm" class="btn btn-default" data-dismiss="modal">Close</button>
			<%= f.submit "Submit", class:"btn btn-primary"%>
			<% end %>
		</div>
	</div>
</div>