<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Listing Requests</h1>
  </div>
  <!-- /.col-lg-12 -->
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
        <div class="dataTable_wrapper">
          <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th>Leave date</th>
                <th>Comeback date</th>
                <th>Description</th>
                <th>Request type</th>
                <th>Status request</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @requests.each do |request| %>
                 <tr class="odd gradeX">
                <td><%= request.comeback_date.strftime("%d/%m/%Y-%H:%M") %></td>
                <td><%= request.leave_date.strftime("%d/%m/%Y-%H:%M") %></td>
                <td><%= request.description %></td>
                <td><%= request.leave_type.humanize %></td>
                <td><%= request.leave_status.humanize %></td>
                <td><%= link_to 'Show', request %></td>
                <td><%= link_to 'Edit', edit_request_path(request) %></td>
                <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
  <!-- /.col-lg-12 -->
</div>