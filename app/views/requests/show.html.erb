<div class="panel-body">
  <div class="row">
    <div class="col-lg-6">

      <p id="notice"><%= notice %></p>

      <div class="row">
        <div class="col-lg-12">
          <h1 class="page-header">Show Request</h1>
        </div>
        <!-- /.col-lg-12 -->
      </div>
      <%= form_for(@request) do |f| %>
      <fieldset disabled>
        <div class="form-group">
          <label for="disabledSelect">Leave date:</label>
          <%= f.text_field :leave_date,  class:"form-control" %>
        </div>

        <div class="form-group">
          <label for="disabledSelect">Comeback date:</label>
          <%= f.text_field :comeback_date,  class:"form-control" %>
        </div>

        <div class="form-group">
          <label for="disabledSelect">Request type:</label>

          <%= f.select :leave_type, options_for_select(Request.leave_types, selected: @request.leave_type), {} , class: "form-control" %>
        </div>

        <div class="form-group">
          <label for="disabledSelect">Description:</label>
          <%= f.text_area :description, class:"form-control", rows:3%>
        </div>

        <div class="form-group">
          <label for="disabledSelect">status_request:</label>
          <%= f.select :leave_status, options_for_select(Request.leave_statuses, selected: @request.leave_status), {} , class: "form-control" %>
        </div>

      </fieldset>
      <% end %>

      <hr>
      <h3>Comments</h3>
      <% @request.comments.each do |comment| %>
        <b><%= comment.user.full_name %>: </b><%= comment.content %><br>
     <% end %>

     <br>
     <h5>Add a comment:</h5>
     <%= form_for([@request, @comment]) do |f| %>
     <p>
      <%= f.text_area :content %>
    </p>
    <p>
      <%= f.submit %>
    </p>
    <% end %>

    <p><%= link_to 'Back', requests_path, class:"btn btn-link"%></p>
  </div>
</div>
</div>