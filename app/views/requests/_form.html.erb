<div class="panel-body">
  <div class="row">
    <div class="col-lg-6">
      <%= form_for(@request) do |f| %>
      <% if @request.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@request.errors.count, "error") %> prohibited this request from being saved:</h2>

        <ul>
          <% @request.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      <% end %>

      <div class="form-group">
        <%= f.label :leave_date %><br>
        <%= f.datetime_select :leave_date, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :comeback_date %><br>
        <%= f.datetime_select :comeback_date , class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :request_type %><br>
        <%= f.select :leave_type, options_for_select(Request.leave_types { |s| [s[0].humanize, s[0]] }, selected: @request.leave_type), {} , class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :description %><br>
        <%= f.text_area :description, class:"form-control", rows:3%>
      </div>
      <div class="form-group">
        <%= f.label :status_request %><br>
        <%= f.select :leave_status, options_for_select(Request.leave_statuses { |s| [s[0].humanize, s[0]] }, selected: @request.leave_status), {} , class: "form-control" %>
      </div>

      <%= f.submit "Submit Button", class:"btn btn-primary"%>
      <% end %>
    </div>
  </div>
</div>