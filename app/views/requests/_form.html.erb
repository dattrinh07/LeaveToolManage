<div class="panel-body">
  <div class="row">
    <div class="col-lg-6">

      <%= form_for(@request) do |f| %>
      <% if @request.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@request.errors.count, "error") %> prohibited this request from being saved:</h2>

        <ul>
          <% @request.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      <% end %>


      <div class="form-group">
        <%= f.label :leave_date %><br>
        <%= f.datetime_select :leave_date %>
      </div>
      <div class="form-group">
        <%= f.label :comeback_date %><br>
        <%= f.datetime_select :comeback_date %>
      </div>
      <div class="form-group">
        <%= f.label :request_type %><br>
        <%= f.number_field :request_type, class:"form-control"%>
      </div>
      <div class="form-group">
        <%= f.label :description %><br>
        <%= f.text_area :description, class:"form-control", rows:3%>
      </div>
      <div class="form-group">
        <%= f.label :status_request %><br>
        <%= f.number_field :status_request, class:"form-control" %>
      </div>

      <%= f.submit "Submit", class:"btn btn-primary"%>
      <% end %>
    </div>
  </div>
</div>
