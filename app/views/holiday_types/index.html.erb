<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">Listing Holiday Type</h1>
	</div>
</div>

<p>
<!-- Button trigger modal -->
<button class="btn btn-default" data-toggle="modal" data-target="#myModal">
	Add New
</button>
</p>
<div class="row">
	<div class="col-lg-12">
		<div class="panel panel-default">
			<div class="dataTable_wrapper">
				<table class="table table-striped table-bordered table-hover" id="tbl_result">
					<thead>
						<tr>
							<th>Title</th>
							<th>Description</th>

							<th colspan="3"></th>
						</tr>
					</thead>
					<tbody>
						<%= render partial: "holiday_type", collection: @holidays %>
					</tbody>
				</table>
			</div>
			<!-- /.panel-body -->
		</div>
		<!-- /.panel -->
	</div>
</div>


<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
				<h4 class="modal-title" id="myModalLabel">Add Holiday Type</h4>
			</div>
			<div class="modal-body">
				<%= render 'form' %>
			</div>
		</div>
		<!-- /.modal-content -->
	</div>
	<!-- /.modal-dialog -->
</div>

<!-- Modal -->
<div class="modal fade" id="myModalEdit" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
				<h4 class="modal-title" id="myModalLabel">Edit Holiday Type</h4>
			</div>
			<div class="modal-body" id="formContentId">
			</div>
		</div>
		<!-- /.modal-content -->
	</div>
	<!-- /.modal-dialog -->
</div>